{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "baseUrl": ".",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": false,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["*", "dev-data", "dev-data/data"],
  "exclude": ["node_modules", "build", "dist"],
  "ts-node": {
    "esm": true
  }
}
